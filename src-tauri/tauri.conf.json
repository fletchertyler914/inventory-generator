{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CaseSpace",
  "version": "0.1.0",
  "identifier": "com.casespace",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "CaseSpace",
        "width": 1600,
        "height": 1000,
        "minWidth": 1200,
        "minHeight": 700,
        "center": true,
        "resizable": true,
        "visible": true,
        "decorations": true,
        "url": "index.html"
      }
    ],
    "security": {
      "csp": "default-src 'self' asset: data: blob:; img-src 'self' asset: data: blob:; worker-src 'self' asset: blob:;",
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDIR/**"]
      }
    }
  },
  "plugins": {
    "sql": {
      "preload": [
        "sqlite:casespace.db"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "-"
    }
  }
}
